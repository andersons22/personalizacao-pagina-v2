{
  "compilerOptions": {
    "outDir": "./dist",       // Diretório de saída para os arquivos JavaScript
    "rootDir": "./src",       // Diretório de entrada para os arquivos TypeScript
    "strict": true,           // Ativa todas as verificações de tipo estritas
    "module": "commonjs",     // Módulo a ser usado na saída
    "target": "es6",          // Versão do JavaScript para a saída
    "sourceMap": true         // Gera arquivos de mapa de origem
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules da compilação
}